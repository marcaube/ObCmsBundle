<label class="control-label text-muted" for="actions">{% trans %}obcms.list.action_title{% endtrans %} :&nbsp;</label>

<select name="action" id="actions" class="form-control input-sm">
    <option value="">----------</option>
    {%  for action in adminClass.listActions %}
        <option value="{{ action }}">{{ ( module ~ '.action_' ~ action)|trans }}</option>
    {% endfor %}
    <option value="delete-action">{% trans %}obcms.list.action_delete{% endtrans %}</option>
</select>

<input type="submit" class="btn btn-default btn-sm" value="{% trans %}obcms.list.action_execute{% endtrans %}">

<span class="help-inline">
    <span id="check-count" class="text-muted"></span>
</span>
