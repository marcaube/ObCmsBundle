    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <title>{% block title %}{% endblock %}</title>
        <meta name="description" content="{% block meta_description %}{% endblock %}">
        <meta name="author" content="{% block meta_author %}{% endblock %}">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/obcms/css/admin.css') }}">
        {% endblock %}

        <script src="{{ asset('bundles/obcms/js/vendor/modernizr-2.6.1-respond-1.1.0.min.js') }}"></script>
    </head>

    <body>
        {% block body %}
            <div class="container">

                <!--[if lt IE 7]>
                    <div class="alert alert-warning">
                        <strong>Oops!</strong>
                        You are using an outdated browser.
                        <a href="http://browsehappy.com/">Upgrade your browser today</a> or
                        <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a>
                        to better experience this site.
                    </div>
                <![endif]-->

                {% render controller("ObCmsBundle:Admin:menu", {'request': app.request}) %}

                {% include "ObCmsBundle:Admin:impersonator.html.twig" %}
                {% include "ObCmsBundle:Admin:flashes.html.twig" %}

                <div class="row">
                    <div class="span12">
                        <div class="cms-wrapper drop-shadow lifted">
                            {% block content %}{% endblock %}
                        </div>
                    </div>
                </div>

            </div>
        {% endblock %}

        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
            <script>window.jQuery || document.write('<script src="{{ asset('bundles/obcms/js/vendor/jquery-1.8.0.min.js') }}"><\/script>')</script>
            <script src="{{ asset('bundles/obcms/js/bootstrap-2.1.1/bootstrap-dropdown.js') }}"></script>
        {% endblock %}
    </body>
</html>